<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".GamesList">

    <!-- כותרת המסך -->
    <TextView
        android:id="@+id/textViewListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="רשימת משחקים"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#9D00FF"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- מכולה אופקית לשדה הסינון ותיבת הסימון -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- שדה סינון לפי מספר קבוצה -->
        <EditText
            android:id="@+id/editTextTeamFilter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="סנן לפי מספר קבוצה"
            android:inputType="number"
            android:layout_marginEnd="8dp" />

        <!-- תיבת סימון למשחקים שלי -->
        <CheckBox
            android:id="@+id/checkboxMyGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="המשחקים שלי" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gamesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="30dp" />

</LinearLayout>